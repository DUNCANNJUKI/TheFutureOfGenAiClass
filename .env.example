# ============================================================================
# OPENAI API CONFIGURATION
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
# Frontend port (default: 8502)
FRONTEND_PORT=8502

# Backend port (default: 8001)
BACKEND_PORT=8001

# API endpoint for frontend to communicate with backend
API_ENDPOINT=http://localhost:8001

# ============================================================================
# CODE ANALYSIS CONFIGURATION
# ============================================================================
# Maximum number of files to analyze per repository
MAX_FILES_TO_ANALYZE=20

# Maximum file size in MB to process
MAX_FILE_SIZE_MB=5

# Patterns to ignore during analysis (comma-separated)
IGNORE_PATTERNS=.git,node_modules,__pycache__,.venv,venv,.env,.env.local

# ============================================================================
# DOCUMENTATION GENERATION
# ============================================================================
# Default documentation language
DOC_LANGUAGE=en

# Include API reference in generated docs
INCLUDE_API_REFERENCE=true

# Include architecture diagram
INCLUDE_ARCHITECTURE=true

# Include contributing guide
INCLUDE_CONTRIBUTING=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================
# Set to true to allow reruns on data changes
STREAMLIT_LOGGER_LEVEL=info

# Client theme: light, dark, auto
STREAMLIT_CLIENT_THEME_BASE=light

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Enable development mode with verbose output
DEVELOPMENT_MODE=false

# Skip SSL verification (only for development)
PYTHONHTTPSVERIFY=1

# ============================================================================
# NOTE
# ============================================================================
# Do not commit this file with actual API keys to version control
# Use this file locally only and add it to .gitignore
# For production, use secure environment variable management
